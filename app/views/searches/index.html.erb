<div>
    <div>
    <%= image_tag "LukApp_logo.png", alt: "LukApp logo", width: 100, height: 100 %>
    </div>
    <div>
        <%= form_with url: searches_path, method: :post, local: true, data: { controller: 'search' } do %>
            <%= text_field_tag :query, nil, placeholder: 'Look something up...', data: { action: 'input->search#search keyup->search#completeSearch', search_target: 'input' } %>
            <%= submit_tag 'Search' %>
        <% end %>
    </div>
    <div>
        <ul>
        </ul>
    </div>
    <hr>
    <div>
        <h4>Your Top Searches:</h4>
        <% if @search_history.empty? %>
                <p>No searches found</p>
        <% else %>
            <ul>
                @search_history.each do |search|
                    <li><%= search.query %></li>
                end
            </ul>
        <% end %>
    </div>
</div>