<div data-controller="search-logic">
    <div>
    <%= image_tag "LukApp_logo.png", alt: "LukApp logo", width: 100, height: 100 %>
    </div>
    <div>
        <%= form_with url: resolve_queries_searches_path, method: :post, data: { action: 'submit->search-logic#resolveSearches' } do |f| %>
            <%= f.text_field :query, placeholder: 'Look something up...', data: { search_logic_target: 'input' } %>
            <%= f.submit 'Search', data: { search_logic_target: 'submit_button'} %>
        <% end %>
    </div>
    <div>
        <ul data-search-target="suggestions">
        </ul>
    </div>
    <hr>
    <div>
        <h4>Your Top Searches:</h4>
        <% if @search_history.empty? %>
                <p>No searches found</p>
        <% else %>
            <ul>
                <% @search_history.each do |search| %>
                    <li>
                        <h5><%= search.query %></h5>
                        <p>Searched: <%= search.count %> times</p>
                    </li>
                <% end %>
            </ul>
        <% end %>
    </div>
</div>